<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:background="#679DEF"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editTextDate"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:inputType="text"
            android:padding="10dp"
            android:text="TODAY"
            android:textColor="#096005"
            android:textSize="20dp" />

        <CalendarView
            android:id="@+id/calendarView"
            style="@android:style/Widget.CalendarView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="21dp"
            android:layout_weight="1"
            android:addStatesFromChildren="true"
            android:dateTextAppearance="@style/TextAppearance.AppCompat.Small"
            android:drawingCacheQuality="low"
            android:fadeScrollbars="false"
            android:layerType="software"
            android:scrollbarStyle="insideInset" />

    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:background="@drawable/custom_button"
            android:id="@+id/btn_thucdon"
            android:layout_marginRight="10dp"
            android:text="Thực Đơn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            ></Button>
        <Button
            android:id="@+id/btn_tapluyen"
            android:text="Tập Luyện"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_button"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:background="@drawable/custom_button"
            android:id="@+id/btn_chontuds"
            android:layout_marginRight="10dp"
            android:text="Chọn Từ DS"
            android:layout_width="150dp"
            android:layout_height="50dp"
            ></Button>
        <Button
            android:background="@drawable/custom_button"
            android:pointerIcon="alias"
            android:id="@+id/btn_themthucdon"
            android:text="Thêm TD riêng"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="13dp"
            ></Button>
    </LinearLayout>

    <ListView
        android:id="@+id/lst_home"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_edt">

    </ListView>


</LinearLayout>