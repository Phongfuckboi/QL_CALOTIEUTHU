<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.favouritFragment"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Hôm nay Của Bạn"
        android:textSize="30dp"
        android:background="#638FD1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
           <com.github.mikephil.charting.charts.PieChart
               android:layout_width="180dp"
               android:layout_height="180dp"
               android:id="@+id/piechart"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="#f00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f000"
            android:text=" How much you can eat more : "/>

        <TextView
            android:id="@+id/chartGotCalories_tv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:textColor="#f00"
            android:background="#f00"
            android:layout_alignParentTop="true"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:gravity="center">

        <TextView
            android:text="Mức Calo đề xuất"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/basicCalories"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <TextView
            android:text="kcal"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="40dp"
        android:paddingLeft="30dp"
        android:gravity="center">

        <TextView
            android:text="Bạn Đã nạp"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/gotCalories"
            android:text="0"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="0.5" />

        <TextView
            android:text="kcal"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="40dp"
        android:paddingLeft="30dp"
        android:gravity="center">

        <TextView
            android:text="Bạn Đã Tieu Thụ"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           />

        <TextView
            android:id="@+id/lostCalories"
            android:text="0"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:gravity="right"

            android:layout_weight="0.5" />

        <TextView
            android:text="kcal"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="right" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cố GẮng Nào (^.^)"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="#D50000"/>


</LinearLayout>